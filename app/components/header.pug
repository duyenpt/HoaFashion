// header
header
	nav.navbar.navbar-expand-lg
		.container-fluid
			button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
				svg.icon.icon-hamburger(aria-hidden='true', focusable='false', role='presentation', viewbox='0 0 37 40')
					path(d='M33.5 25h-30c-1.1 0-2-.9-2-2s.9-2 2-2h30c1.1 0 2 .9 2 2s-.9 2-2 2zm0-11.5h-30c-1.1 0-2-.9-2-2s.9-2 2-2h30c1.1 0 2 .9 2 2s-.9 2-2 2zm0 23h-30c-1.1 0-2-.9-2-2s.9-2 2-2h30c1.1 0 2 .9 2 2s-.9 2-2 2z')
			a.navbar-brand(href='#')
				img(src="img/logo.png" alt="Image")
			#navbarSupportedContent.collapse.navbar-collapse
				#mainnav.mainnav.mr-auto.ml-auto
					.closemobileMenu.d-lg-none
						i.fa.fa-times-circle(aria-hidden='true')
						|  Close Menu
					ul.navbar-nav.menu.justify-content-center
						li.nav-item.active
							a.nav-link(href='#') Home 
						li.nav-item
							a.nav-link(href='#') 
								| Clothing
								i.fa.fa-plus.d-lg-none(aria-hidden='true')
							+submenuClothing
						li.nav-item
							a.nav-link(href='#')
								| Jewelry
								i.fa.fa-plus.d-lg-none(aria-hidden='true')
							+submenuJewelry
						li.nav-item
							a.nav-link(href='#')
								| Accesories
								i.fa.fa-plus.d-lg-none(aria-hidden='true')
							+submenuAccesories
						li.nav-item
							a.nav-link(href='#') 
								| Shop Features
								i.fa.fa-plus.d-lg-none(aria-hidden='true')
							+submenuAccesories
						li.nav-item.dropdown
							a.nav-link(href='#') 
								| Pages
								i.fa.fa-plus.d-lg-none(aria-hidden='true')
							+subMenuPage
			.navbar-right
				button.search-open
					i.fa.fa-search(aria-hidden='true')
				.dropdown
					a.cart(href="#" id="dropdownCart" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
						i.fa.fa-shopping-bag(aria-hidden='true')
						span.cart-count 0
					+cartDropdown
